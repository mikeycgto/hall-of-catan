%h2 Edit Player

= form_for @player do |f|
  = render "shared/error_messages", :target => @player
  %dl
    %dt
      = f.label :first_name, 'First Name'
    %dd
      = f.text_field :first_name
    %dt
      = f.label :last_name, 'Last Name'
    %dd
      = f.text_field :last_name
    
    %dd{:align => 'right'}
      = f.submit 'Update'